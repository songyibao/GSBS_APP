<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:flexDirection="column">
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/border_bottom"
        app:flexDirection="row"
        app:justifyContent="space_between"
        app:alignItems="center"
        app:layout_flexShrink="0"
        android:visibility="gone">
        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:alignItems="center">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="4dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/exam"/>
            <TextView
                android:id="@+id/now_year"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2008学年"
                android:textColor="#7DBDF2"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/now_term"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:textColor="#7DBDF2"
                android:text="第1学期"/>
        </com.google.android.flexbox.FlexboxLayout>
        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="点击更换学年学期"
            android:textColor="#7DBDF2"
            android:textSize="20dp"
            android:layout_marginRight="10dp"/>
    </com.google.android.flexbox.FlexboxLayout>
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/title_con"
        android:layout_width="match_parent"
        app:justifyContent="space_around"
        android:visibility="gone"
        android:background="@drawable/border_bottom"
        android:layout_height="50dp"
        app:layout_flexShrink="0">
        <TextView
            android:layout_height="match_parent"
            android:layout_width="100dp"
            android:gravity="center"
            android:textSize="20dp"
            android:text="课程名称"
            app:layout_flexGrow="4"/>
        <TextView
            android:layout_height="match_parent"
            android:layout_width="100dp"
            android:gravity="center"
            android:textSize="20dp"
            android:text="考试时间"
            app:layout_flexGrow="4"/>
        <TextView
            android:text="考试地点"
            android:layout_height="match_parent"
            android:layout_width="100dp"
            android:textSize="20dp"
            android:gravity="center"
            app:layout_flexGrow="1"/>
    </com.google.android.flexbox.FlexboxLayout>
    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/date_view_con">
        <ListView
            android:id="@+id/date_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
    </com.google.android.flexbox.FlexboxLayout>

    <ListView
        android:id="@+id/lv_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/list_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:justifyContent="center"
        app:alignItems="center">
        <ProgressBar
            android:layout_width="150dp"
            android:layout_height="150dp" />
    </com.google.android.flexbox.FlexboxLayout>

</com.google.android.flexbox.FlexboxLayout>
